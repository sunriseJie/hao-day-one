  vertical-align: bottom;
} */

.diary-detail-video {
  position: relative;
  margin-bottom: 12rpx;
  margin-left: 5rpx;
}

.diary-detail-video-ico {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  /* margin-left: -51rpx; */
  left: 40%;
  top:30%
}

.diary-detail-video-img {
  width: 298rpx;
  height: 145rpx;
  border-radius: 4rpx;
  vertical-align: bottom;
}

.video-text{
  margin-bottom: 0;
   display: flex; 
  flex-direction: row;
  position: absolute;
  bottom: 0;
  justify-content: space-between;
}

.video-text-size{
  margin-left: 0;
  float: right;
  font-size: 12px;
}

.video-text-time{
  margin-right: 0;
  position: relative;
  float: right;
}

.m-trip-detail{
  overflow: hidden;
  position: relative;
  border-radius: 8rpx;
  margin: 20rpx;
  display: flex;
  flex-direction: column;
}
.m-trip-detail .cover{
  /* width: 100%;
   height: 352rpx;  
  vertical-align: bottom; */

  width: 750rpx;
  height: 100%;
}
.m-trip-detail::before{
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 560rpx;
  height: 100%;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
  background: linear-gradient(to right,rgba(0,0,0,.6) 0,rgba(0,0,0,0) 100%);
}
.m-trip-detail .info{
  color: #fff;
  padding: 0 30rpx;
  /* position: absolute; */
  top:0;
  left: 0;
  /* height: 100%; */
  width: 100%;
  z-index: 1;
  box-sizing: border-box;
}
.m-trip-detail .info .h2{
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1.22;
  text-shadow: 2rpx 2rpx rgba(0,0,0,.4);
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  margin-top: 30rpx;
}
.m-trip-detail .detail{
  margin-top: 10rpx;
  padding-left: 18rpx;
  position: relative;
  font-size: 24rpx;
  line-height: 1;
  font-weight: bold;
  text-shadow: 2rpx 4rpx 0px rgba(0,0,0,0.20);
  height: 50rpx;
}
.m-trip-detail .detail view{
  margin-bottom: 6rpx;
}
.m-trip-detail .detail text{
  margin-right: 20rpx;
}
.m-trip-detail .detail .place{
  font-weight: normal;
  font-size: 16rpx;
}
.m-trip-detail .detail::before{
  content: '';
  width: 6rpx;
  height: 100%;
  border-right: 1rpx;
  background-color: #4ABDCC;
  position: absolute;
  left: 4rpx;
  top: 2rpx;
}
.m-trip-detail .user{
  position: absolute;
  width: 100%;
  left: 30rpx;
  bottom: 30rpx;
  line-height: 50rpx;
  font-size: 18rpx;
}
.m-trip-detail .avatar{
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin-right: 15rpx;
  border-radius: 50rpx;
  vertical-align: bottom;
}
.m-trip-detail .bottom{
  position: absolute;
  bottom: 24rpx;
  font-size: 20rpx;
}
.bg_img{
  height: 100%;
  position: absolute;
}
