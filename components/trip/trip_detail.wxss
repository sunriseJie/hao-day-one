@import '../../components/trip/trip.wxss';

.info-before{
  width: 100%;
  background-color: #fffdf5;
  /* opacity: 0.9; */
  height: 100%;
  position: absolute;
  top:0;
  left: 0;
  z-index: 1;
  box-sizing: border-box;
  margin-top: 140rpx;
}
.detail-container{
  width: 100%;
  
  
}
.photo-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: flex-start;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: 10rpx;
  margin-top: 30rpx;
}

.diary-detail-photo {
  position: relative;
  margin-bottom: 12rpx;
  margin-left: 5rpx;
  background-color:  #fffdf5;
}
.diary-detail-photov{
  position: relative;
  margin-bottom: 12rpx;
  margin-left: 5rpx;
  background-color:  #0f1324;
  width: 145rpx;
  height: 145rpx;
  display: flex;
  flex-direction: row;
}

.diary-detail-photo image {
  width: 145rpx;
  height: 145rpx;
  border-radius: 4rpx;
  vertical-align: bottom;
}

.diary-detail-photo-video {
  width: 45rpx;
  height: 45rpx;
  border-radius: 4rpx;
  vertical-align: bottom;
  
}
/* 
.diary-detail-video image{
  width: 145rpx;
  height: 145rpx;
